<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="?android:textColorPrimary" />
            <size android:width="120dp" android:height="120dp" />
        </shape>
    </item>
    <!-- Inner circle (transparent to show the image) -->
    <item android:right="4dp" android:left="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" />
            <size android:width="112dp" android:height="112dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="3dp"
                android:color="#CCCCCC" />
        </shape>
    </item>
</layer-list>
